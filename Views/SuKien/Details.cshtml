@model HocCoreMVC.Models.DangKySuKien

<div class="card shadow mt-4" style="max-width: 600px; margin: auto;">
    <div class="card-header bg-primary text-white">
        <h3>Thông tin chi tiết</h3>
    </div>
    <div class="card-body">
        <p><strong>Khách hàng:</strong> @Model.HoTen</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <hr />
        <p><strong>Loại vé:</strong> <span class="text-uppercase fw-bold">@Model.LoaiVe</span></p>
        <p><strong>Đơn giá:</strong> @(Model.LoaiVe == "VIP" ? "1.000.000" : "500.000") đ</p>
        <p><strong>Số lượng:</strong> @Model.SoVe</p>

        @if (Model.SoVe >= 5)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> Bạn mua trên 5 vé nên được giảm giá <strong>10%</strong>
            </div>
        }

        <h4 class="mt-3">Tổng thanh toán: <span class="text-danger">@Model.ThanhTien.ToString("#,##0") VNĐ</span></h4>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa thông tin</a>
        <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
    </div>
</div>